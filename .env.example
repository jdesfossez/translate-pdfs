# PDF Translation Service Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
PDF_TRANSLATE_DEBUG=false
PDF_TRANSLATE_HOST=0.0.0.0
PDF_TRANSLATE_PORT=8000

# Database Configuration
# For development: sqlite:///./data/jobs.db
# For production: postgresql://user:password@host:port/database
PDF_TRANSLATE_DATABASE_URL=sqlite:///./data/jobs.db

# Redis Configuration
# For development: redis://localhost:6379/0
# For production: redis://redis-host:6379/0
PDF_TRANSLATE_REDIS_URL=redis://localhost:6379/0

# Translation Model Configuration
# Supported models:
# - facebook/mbart-large-50-many-to-many-mmt (smaller, faster)
# - facebook/nllb-200-distilled-600M (medium)
# - facebook/nllb-200-1.3B (larger, better quality)
# - facebook/nllb-200-3.3B (largest, best quality, requires GPU)
PDF_TRANSLATE_MODEL_NAME=facebook/mbart-large-50-many-to-many-mmt

# Model Loading Options
PDF_TRANSLATE_USE_SAFETENSORS=true
PDF_TRANSLATE_CPU_LOAD_THEN_GPU=true

# Performance Settings
PDF_TRANSLATE_MAX_TOKENS_PER_BATCH=32000
PDF_TRANSLATE_MAX_FILE_SIZE=52428800

# Directory Paths (relative to app root)
PDF_TRANSLATE_UPLOAD_DIR=./uploads
PDF_TRANSLATE_OUTPUT_DIR=./outputs

# Queue Settings
PDF_TRANSLATE_QUEUE_NAME=pdf_translation

# Logging
PDF_TRANSLATE_LOG_LEVEL=INFO

# OCR Settings
PDF_TRANSLATE_OCR_LANGUAGE=eng+fra

# Translation Settings
PDF_TRANSLATE_SOURCE_LANGUAGE=auto
PDF_TRANSLATE_TARGET_LANGUAGE=fr_XX

# GPU Settings (for NVIDIA Docker - set by Docker Compose)
# NVIDIA_VISIBLE_DEVICES=all
# NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Security Settings (for production)
# PDF_TRANSLATE_SECRET_KEY=your-secret-key-here
# PDF_TRANSLATE_ALLOWED_HOSTS=localhost,yourdomain.com
